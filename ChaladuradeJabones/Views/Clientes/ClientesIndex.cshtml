@model IEnumerable<ChaladuradeJabones.Models.ClientesModel>
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a><span class="glyphicon glyphicon-globe"></span>&nbsp;Clientes</a></li>
</ol>
<div class="row dkv-filter dkv-quotation-info">
    <div class="col-lg-12">
        <div class="col-lg-5">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon glyphicon-edit"></span>
                    Nuevo / Editar
                </div>
                <div class="panel-body dkv-filter">
                    <div class="col-lg-12">
                        <div class="col-lg-12">
                            @Html.Partial("_AltaClientes", new ChaladuradeJabones.Models.ClientesModel())
                        </div>

                        <div class="col-lg-7">
                        </div>
                        <div class="col-lg-5">
                            <button id="btnClear" type="button" class="btn btn-default"><span class="glyphicon glyphicon-erase"></span>Limpiar</button>
                            <button id="btnAdd" type="button" class="btn btn-success"><span class="glyphicon glyphicon-save"></span>Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                @if (TempData["alertMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade in" role="alert">
                        <button class="close" aria-label="Close" data-dismiss="alert" type="button">
                            <span aria-hidden="true">×</span>
                        </button>
                        @TempData["alertMessage"]
                    </div>
                }
                @if (TempData["successMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade in" role="alert">
                        <button class="close" aria-label="Close" data-dismiss="alert" type="button">
                            <span aria-hidden="true">×</span>
                        </button>
                        @TempData["successMessage"]
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="row dkv-results">
            <table id="ClienteTable" cellspacing="0"
                   class="table table-striped table-bordered table-responsive table-hover"
                   dtoptions="dataTableOptions" width="100%">
                <thead>
                    <tr class="bg-primary">
                        <th>Nombre Zona</th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="85%">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </th>
                        <th width="15%">
                            <div class="col-lg-12">
                                <div class="col-lg-6">
                                    <a id="aEditarZ" class="btn btn-primary edit pull-right TABLING" title="Editar" data-id="@item.ClienteId" data-name="@item.Nombre" href="#"><span class="glyphicon glyphicon-edit"></span></a>
                                </div>
                                <div class="col-lg-6">
                                    <a id="aEliminarZ" class="btn btn-danger delete pull-right TABLING" title="Eliminar" data-id="@item.ClienteId" href="#"><i class="glyphicon glyphicon-remove"></i></a>
                                </div>
                            </div>
                        </th>
                    </tr>
                }
            </table>
        </div>
</div>

</div>
